script/source = "extends RandomBarrierGrid


func _input(event):
	if event.is_action_pressed(\"ui_cancel\"):
		_go_back()


func _notification(what):
	if what == MainLoop.NOTIFICATION_WM_QUIT_REQUEST or what == MainLoop.NOTIFICATION_WM_GO_BACK_REQUEST:
		_go_back()


func _go_back():
	GameState.started = false
	get_tree().change_scene(\"res://levels/main_menu.tscn\")
"

[sub_resource type="GDScript" id=1]
script/source = "extends Player

const JUMP_ICON_FADE := 0.5

onready var jump_icon1: Node2D = get_node(\"../CanvasLayer/VBoxContainer/HBoxContainer/Control/JumpIcon\")
onready var jump_icon2: Node2D = get_node(\"../CanvasLayer/VBoxContainer/HBoxContainer/Control/JumpIcon2\")


func _ready():
	yield(get_tree(), \"idle_frame\")
	_on_jumping(null)		# if we loaded from disk, we shld update the icons


func _physics_process(_delta):
	if global_position.y > 500:
		GameState.lost()


func _on_landed():
	jump_icon1.modulate.a = 1
	jump_icon2.modulate.a = 1


func _on_jumping(_direction):
	if current_jumps > 0:
		jump_icon1.modulate.a = JUMP_ICON_FADE
		
	if current_jumps > 1:
		jump_icon2.modulate.a = JUMP_ICON_FADE
"

